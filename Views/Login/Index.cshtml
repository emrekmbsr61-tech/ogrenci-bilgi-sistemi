@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OBS Giriş</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #e9ecef; display: flex; align-items: center; justify-content: center; height: 100vh; }
        .card { width: 400px; border: none; shadow: 0 4px 8px rgba(0,0,0,0.1); }
    </style>
</head>
<body>
    <div class="card p-4">
        <h3 class="text-center mb-4">Öğrenci Bilgi Sistemi</h3>

        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger">@ViewBag.Hata</div>
        }

        <form method="post" action="/Login/Index">
            <div class="mb-3">
                <label>E-Posta Adresi</label>
                <input type="email" name="email" class="form-control" required placeholder="admin@uni.edu.tr" />
            </div>
            <div class="mb-3">
                <label>Şifre</label>
                <input type="password" name="sifre" class="form-control" required placeholder="123" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        </form>

        <div class="mt-3 text-muted text-center" style="font-size: 0.8rem;">
            2025-2026 GÜZ DÖNEMİ
        </div>
    </div>
</body>
</html>