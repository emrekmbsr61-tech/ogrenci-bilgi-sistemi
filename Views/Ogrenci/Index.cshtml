@model OgrBilgiSistemi.Models.Ogrenciler
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Öğrenci Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-dark bg-primary p-3">
        <span class="navbar-brand mb-0 h1">Öğrenci Bilgi Sistemi</span>
        <div class="d-flex align-items-center">
            <span class="text-white me-3">@Model.Kullanici.Ad @Model.Kullanici.Soyad</span>
            <a href="/Login/CikisYap" class="btn btn-danger btn-sm">Çıkış</a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/Ogrenci/Index" class="list-group-item list-group-item-action active">Profilim</a>
                    <a href="/Ogrenci/DersSecimi" class="list-group-item list-group-item-action">Ders Seçimi</a>
                    <a href="/Ogrenci/Transkript" class="list-group-item list-group-item-action">Not Görüntüle</a>
                </div>
            </div>

            <div class="col-md-9">
                <div class="card shadow">
                    <div class="card-header">
                        <h5>Öğrenci Bilgileri</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Numara:</strong> @Model.OgrenciNo</p>
                                <p><strong>Bölüm:</strong> @Model.Bolum</p>
                                <p><strong>Sınıf:</strong> @Model.Sinif . Sınıf</p>
                            </div>
                            <div class="col-md-6">
                                <div class="alert alert-info text-center">
                                    <h4>AGNO: @(Model.Sinif == 1 ? "Yok" : Model.Agno.ToString())</h4>
                                    <hr>
                                    <h5>Kredi Limiti: <span class="badge bg-success">@Model.KrediLimiti</span></h5>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <p>
                            <strong>Danışman Hoca:</strong>
                            @if (Model.Danisman != null)
                            {
                                <span>@Model.Danisman.Unvan @Model.Danisman.Kullanici.Ad @Model.Danisman.Kullanici.Soyad</span>
                            }
                            else
                            {

                                <span class="text-danger">Atanmamış</span>
                            }
                        </p>
                    </div>
                </div>

                @if (Model.Agno < 2.00m && Model.Sinif > 1)
                {
                    <div class="alert alert-danger mt-3">
                        <strong>DİKKAT!</strong> AGNO'nuz 2.00'ın altında olduğu için <b>Çapraza Kaldınız.</b>
                        Sadece alttan ders alabilirsiniz, bulunduğunuz dönemin derslerini alamazsınız.
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>