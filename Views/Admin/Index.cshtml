@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Yönetici Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">

    <nav class="navbar navbar-dark bg-dark p-3 shadow">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1"><i class="bi bi-shield-lock-fill"></i> Yönetici Paneli</span>
            <div class="d-flex align-items-center">
                <span class="text-white me-3">Hoşgeldin, @ViewBag.AdminAd</span>
                <a href="/Login/CikisYap" class="btn btn-outline-danger btn-sm">Çıkış Yap</a>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3 shadow" style="height: 150px;">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h1 class="display-4 fw-bold">@ViewBag.OgrenciSayisi</h1>
                        <h5 class="card-title">Toplam Öğrenci</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success mb-3 shadow" style="height: 150px;">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h1 class="display-4 fw-bold">@ViewBag.HocaSayisi</h1>
                        <h5 class="card-title">Toplam Akademisyen</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning text-dark mb-3 shadow" style="height: 150px;">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h1 class="display-4 fw-bold">@ViewBag.DersSayisi</h1>
                        <h5 class="card-title">Aktif Dersler</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-danger mb-3 shadow" style="height: 150px;">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h1 class="display-4 fw-bold">@ViewBag.ToplamKayit</h1>
                        <h5 class="card-title">Ders Kayıtları</h5>
                    </div>
                </div>
            </div>
        </div>

        <h4 class="mt-4 mb-3">Hızlı İşlemler</h4>
        <div class="row">
            <div class="col-md-4">
                <a href="/Admin/OgrenciListesi" class="btn btn-outline-primary w-100 p-4 fs-5 shadow-sm">
                    <i class="bi bi-people-fill display-6 d-block mb-2"></i>
                    Öğrenci Yönetimi
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Admin/OgretmenListesi" class="btn btn-outline-success w-100 p-4 fs-5 shadow-sm">
                    <i class="bi bi-person-video3 display-6 d-block mb-2"></i>
                    Akademisyen Yönetimi
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Admin/DersListesi" class="btn btn-outline-warning w-100 p-4 fs-5 shadow-sm">
                    <i class="bi bi-book-half display-6 d-block mb-2"></i>
                    Ders İşlemleri
                </a>
            </div>
        </div>
    </div>

</body>
</html>