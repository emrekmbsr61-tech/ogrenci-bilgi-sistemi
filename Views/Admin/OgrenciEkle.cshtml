@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Öğrenci Ekle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5" style="max-width:500px">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4>Yeni Öğrenci Kaydı</h4>
            </div>
            <div class="card-body">
                <form method="post" action="/Admin/OgrenciEkle">
                    <div class="mb-3">
                        <label>Öğrenci Numarası</label>
                        <input type="text" name="ogrNo" class="form-control" required placeholder="Örn: 2025100" />
                    </div>
                    <div class="mb-3">
                        <label>Ad</label>
                        <input type="text" name="ad" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Soyad</label>
                        <input type="text" name="soyad" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Sınıf Seviyesi</label>
                        <select name="sinif" class="form-select">
                            <option value="1">1. Sınıf (AGNO Yok)</option>
                            <option value="2">2. Sınıf</option>
                            <option value="3">3. Sınıf</option>
                            <option value="4">4. Sınıf</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success w-100">Kaydet</button>
                    <a href="/Admin/OgrenciListesi" class="btn btn-link w-100 mt-2">İptal</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
