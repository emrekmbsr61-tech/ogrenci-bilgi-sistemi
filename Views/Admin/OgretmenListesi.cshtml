@model List<OgrBilgiSistemi.Models.Akademisyenler>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Öğretmenler</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-3">
        @if (TempData["Hata"] != null)
        {
            <div class="alert alert-danger">@TempData["Hata"]</div>
        }
        @if (TempData["Mesaj"] != null)
        {
            <div class="alert alert-success">@TempData["Mesaj"]</div>
        }
    </div>
    <div class="container mt-4">
        <h3>Öğretmen Listesi</h3>
        <a href="/Admin/OgretmenEkle" class="btn btn-primary mb-3">Yeni Öğretmen Ekle</a>
        <a href="/Admin/Index" class="btn btn-secondary mb-3">Geri Dön</a>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Unvan</th>
                    <th>Ad Soyad</th>
                    <th>Email</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hoca in Model)
                {
                    <tr>
                        <td>@hoca.Unvan</td>
                        <td>@hoca.Kullanici.Ad @hoca.Kullanici.Soyad</td>
                        <td>@hoca.Kullanici.Email</td>
                        <td>
                            <a href="/Admin/OgretmenSil/@hoca.AkademisyenId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğine emin misin?')">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
