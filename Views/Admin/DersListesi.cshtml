@model List<OgrBilgiSistemi.Models.Dersler>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Ders Yönetimi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-3">
        @if (TempData["Hata"] != null)
        {
            <div class="alert alert-danger">@TempData["Hata"]</div>
        }
        @if (TempData["Mesaj"] != null)
        {
            <div class="alert alert-success">@TempData["Mesaj"]</div>
        }
    </div>
    <div class="container mt-4">
        <h3>Açılan Dersler ve Akademisyenler</h3>
        <a href="/Admin/Index" class="btn btn-secondary mb-3">Geri Dön</a>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Ders Adı</th>
                    <th>Dersi Veren Hoca</th>
                    <th>Dönem</th>
                    <th>Kredi / AKTS</th>
                    <th>Tür</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ders in Model)
                {
                    <tr>
                        <td class="fw-bold">@ders.DersAdi</td>
                        <td>
                            @if (ders.Hoca != null && ders.Hoca.Kullanici != null)
                            {
                                <span class="text-primary">@ders.Hoca.Unvan @ders.Hoca.Kullanici.Ad @ders.Hoca.Kullanici.Soyad</span>
                            }
                            else
                            {
                                <span class="text-danger">Atanmamış</span>
                            }
                        </td>
                        <td>@ders.Donem . Dönem</td>
                        <td>@ders.Kredi Kredi / @ders.Akts AKTS</td>
                        <td>@(ders.ZorunluMu == true ? "Zorunlu" : "Seçmeli")</td>
                        <td>
                            <a href="/Admin/DersSil/@ders.DersId" class="btn btn-danger btn-sm" onclick="return confirm('@ders.DersAdi dersini silmek istediğinize emin misiniz? Bu derse kayıtlı öğrencilerin kayıtları da silinecek!')">Dersi Kapat (Sil)</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>