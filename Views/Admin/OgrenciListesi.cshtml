@model List<OgrBilgiSistemi.Models.Ogrenciler>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Öğrenci Listesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-3">
        @if (TempData["Hata"] != null)
        {
            <div class="alert alert-danger">@TempData["Hata"]</div>
        }
        @if (TempData["Mesaj"] != null)
        {
            <div class="alert alert-success">@TempData["Mesaj"]</div>
        }
    </div>
    <div class="container mt-4">
        <h3>Öğrenci Listesi (Toplam: @Model.Count)</h3>
        <div class="alert alert-info">
            Not: Test Öğrencilerini (No: 2025001, 002, 003, 004) buradan kontrol edebilirsin.
        </div>

        <a href="/Admin/OgrenciEkle" class="btn btn-primary mb-3">Yeni Öğrenci Ekle</a>
        <a href="/Admin/Index" class="btn btn-secondary mb-3">Geri Dön</a>

        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Öğrenci No</th>
                    <th>Ad Soyad</th>
                    <th>Sınıf</th>
                    <th>AGNO</th>
                    <th>Kredi Limiti</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ogr in Model)
                {
                    <tr>
                        <td>@ogr.OgrenciNo</td>
                        <td>@ogr.Kullanici.Ad @ogr.Kullanici.Soyad</td>
                        <td>@ogr.Sinif . Sınıf</td>
                        <td>
                            @if (ogr.Sinif == 1)
                            {
                                <span class="badge bg-secondary">Yok</span>
                            }
                            else
                            {

                                <strong>@ogr.Agno</strong>
                            }
                        </td>
                        <td>@ogr.KrediLimiti</td>
                        <td>
                            <a href="/Admin/OgrenciSil/@ogr.OgrenciId" class="btn btn-danger btn-sm" onclick="return confirm('Bu öğrenciyi ve tüm notlarını silmek istediğine emin misin?')">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
