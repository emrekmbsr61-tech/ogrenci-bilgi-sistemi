@model List<OgrBilgiSistemi.Models.Dersler>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Öğretmen Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-dark bg-success p-3">
        <span class="navbar-brand mb-0 h1">Öğretmen Paneli</span>
        <div class="d-flex align-items-center">
            <span class="text-white me-3">@ViewBag.HocaAd</span>
            <a href="/Login/CikisYap" class="btn btn-danger btn-sm">Çıkış</a>
        </div>
    </nav>

    <div class="container mt-4">
        <h3>Verdiğiniz Dersler</h3>
        <div class="row mt-3">
            @foreach (var ders in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <h5 class="card-title">@ders.DersAdi</h5>
                            <p class="card-text">
                                Dönem: @ders.Donem | Kredi: @ders.Kredi <br>
                                Kontenjan: @ders.Kontenjan
                            </p>
                            <a href="/Ogretmen/NotGiris/@ders.DersId" class="btn btn-primary w-100">Not Gir / Listele</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>