@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Şifre Değiştir</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 400px;">
        <h3 class="text-center mb-3">🔑 Şifre Değiştir</h3>

        @if (TempData["Hata"] != null)
        {
            <div class="alert alert-danger">@TempData["Hata"]</div>
        }

        <form method="post" action="/Profil/SifreDegistir">
            <div class="mb-3">
                <label>Eski Şifre</label>
                <input type="password" name="eskiSifre" class="form-control" required />
            </div>
            <div class="mb-3">
                <label>Yeni Şifre</label>
                <input type="password" name="yeniSifre" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Güncelle</button>
        </form>
        <div class="mt-3 text-center">
            <a href="javascript:history.back()">Geri Dön</a>
        </div>
    </div>
</body>
</html>